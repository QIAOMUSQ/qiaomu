<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiaomu.modules.sys.dao.YwCommunityDao">



    <select id="queryById" resultType="com.qiaomu.modules.sys.entity.YwCommunity">
        SELECT * FROM yw_community WHERE id = #{communityId}
    </select>

    <select id="findAllByCondition" resultType="com.qiaomu.modules.sys.entity.YwCommunity">
         SELECT A.* FROM yw_community A LEFT JOIN prov_city_data B ON A.city_id = b.id
        <where>
            1=1
            <if test="name != null and name !=''">
                AND A.name like concat('%',#{name},'%')
            </if>
            <if test="cityId != null and cityId !=''">
                AND A.city_id = #{cityId}
            </if>
            <if test="cityName != null and cityName !=''">
                AND B.city_name = #{cityName}
            </if>
            <if test="cityCode != null and cityCode !=''">
                AND B.city_code = #{cityCode}
            </if>
            <if test="companyId != null and companyId !=''">
                AND A.company_id = #{companyId}
            </if>

        </where>
    </select>

    <select id="selectPageByCondition" resultType="com.qiaomu.modules.sys.entity.YwCommunity">
        SELECT A.* FROM yw_community A LEFT JOIN prov_city_data B ON A.city_id = b.id
        <where>
            1=1
            <if test="name != null and name !=''">
                AND A.name like  concat('%',#{name},'%')
            </if>
            <if test="cityId != null and cityId !=''">
                AND A.city_id = #{cityId}
            </if>
            <if test="companyId != null and companyId !=''">
                AND A.company_id = #{companyId}
            </if>
            <if test="cityName != null and cityName !=''">
                AND B.city_name = #{cityName}
            </if>

        </where>
    </select>
</mapper>