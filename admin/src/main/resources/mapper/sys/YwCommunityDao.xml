<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiaomu.modules.sys.dao.YwCommunityDao">



    <select id="queryById" resultType="com.qiaomu.modules.sys.entity.YwCommunity">
        SELECT * FROM yw_community WHERE id = #{communityId}
    </select>

    <select id="findAllByCondition" resultType="com.qiaomu.modules.sys.entity.YwCommunity">
         SELECT * FROM yw_community
        <where>
            <if test="name != null and name !=''">
                AND name = #{name}
            </if>
            <if test="cityId != null and cityId !=''">
                AND city_id = #{cityId}
            </if>
            <if test="companyId != null and companyId !=''">
                AND company_id = #{companyId}
            </if>

        </where>
    </select>
</mapper>