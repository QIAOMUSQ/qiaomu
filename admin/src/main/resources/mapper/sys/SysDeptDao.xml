<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiaomu.modules.sys.dao.SysDeptDao">
	<resultMap id="deptMap" type="com.qiaomu.modules.sys.entity.SysDeptEntity">
		<id property="deptId" column="dept_id"/>
		<result property="cityId" column="city_id"/>
		<result property="delFlag" column="del_flag"/>
		<result property="name" column="name"/>
		<result property="parentId" column="parent_id"/>
		<result property="orderNum" column="order_num"/>
	</resultMap>
	<select id="queryDetpIdList" resultType="long">
		select dept_id from sys_dept where parent_id = #{value} and del_flag = 0
	</select>
	<select id="queryDeptAll" resultMap="deptMap" parameterType="com.qiaomu.modules.sys.entity.SysDeptEntity" >
		SELECT * FROM  sys_dept
		<where>
			<if test="name != null and name !=''">
				  AND name = #{name}
			</if>
			<if test="deptId != null and deptId !=''">
				AND dept_id = #{deptId}
			</if>
		</where>
	</select>
</mapper>