<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiaomu.modules.sys.dao.UserExtendDao">


    <select id="getUserExtend" resultType="com.qiaomu.modules.sys.entity.UserExtend">
        SELECT * FROM yw_user_extend where user_phone = #{userPhone}
    </select>

    <select id="selectAll" resultType="com.qiaomu.modules.sys.entity.UserExtend">
        SELECT * FROM yw_user_extend
        <where>
            <if test="userPhone != null  and userPhone !=''" >
               AND  user_phone = #{userPhone}
            </if>
            <if test="companyId != null and companyId !=''">
                AND  company_id = #{companyId}
            </if>
            <if test="communityId != null and communityId !=''">
                AND  community_id = #{communityId}
            </if>
        </where>
    </select>

</mapper>