<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiaomu.modules.workflow.dao.UserWorkflowDao">

    <select id="selectByworkflowId" resultType="com.qiaomu.modules.workflow.entity.UserWorkflow" parameterType="long">
        select * from yw_user_workflow WHERE workflow_id = #{workflowId};
    </select>
    <select id="getUserWorkflows" resultType="com.qiaomu.modules.workflow.entity.UserWorkflow">
        select * from yw_user_workflow
        <where>
            1=1
            <if test="userId !=null and userId!=''">
               and user_id =#{userId}
            </if>
            <if test="communityId!=null and communityId!=''">
                and community_id != #{communityId}
            </if>
        </where>
    </select>
</mapper>