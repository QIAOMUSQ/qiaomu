<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiaomu.modules.workflow.dao.InvitationDao">
    <delete id="deleteByCommunity" parameterType="long">
        DELETE FROM yw_invitation WHERE community_id=#{communityId}
    </delete>
    <select id="selectPageAll" resultType="com.qiaomu.modules.workflow.entity.InvitationEntity">
        SELECT i.*,c.name as communityName FROM yw_invitation i LEFT JOIN yw_community c ON i.community_id = c.id
        <where>
            <if test="entity.companyId != null">
                and c.company_id = #{entity.companyId}
            </if>
            <if test="entity.communityId != null">
                and i.community_id = #{entity.communityId}
            </if>
            <if test="entity.title != null and entity.title != ''">
                and i.title like concat('%',#{title},'%')
            </if>
            <if test="entity.communityIds !=null ">
                and i.community_id in
                <foreach item="communityIds" collection="entity.communityIds" index="communityId" open="(" separator="," close=")" >
                    #{communityIds}
                </foreach>
            </if>
        </where>

    </select>
    <select id="selectById" resultType="com.qiaomu.modules.workflow.entity.InvitationEntity">
         SELECT i.*,c.name as communityName FROM yw_invitation i LEFT JOIN yw_community c ON i.community_id = c.id
         where i.id = #{id}
    </select>
    <select id="selectByCommunityId" resultType="com.qiaomu.modules.workflow.entity.InvitationEntity">
        SELECT * FROM yw_invitation WHERE community_id=#{communityId}
    </select>

</mapper>