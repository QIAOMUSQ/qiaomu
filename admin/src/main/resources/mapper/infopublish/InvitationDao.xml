<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiaomu.modules.infopublish.dao.InvitationDao">
    <delete id="deleteByCommunity" parameterType="long">
        DELETE FROM yw_invitation WHERE community_id=#{communityId}
    </delete>
    <select id="selectPageAll" resultType="com.qiaomu.modules.infopublish.entity.InvitationEntity">
        SELECT i.*,c.name as communityName FROM yw_invitation i LEFT JOIN yw_community c ON i.community_id = c.id
        <where>
            1=1
            <if test="companyId != null">
                and c.company_id = #{companyId}
            </if>
            <if test="communityId != null">
                and i.community_id = #{communityId}
            </if>
            <if test="title != null and title != ''">
                and i.title like concat('%',#{title},'%')
            </if>
        </where>

    </select>
    <select id="selectById" resultType="com.qiaomu.modules.infopublish.entity.InvitationEntity">
         SELECT i.*,c.name as communityName FROM yw_invitation i LEFT JOIN yw_community c ON i.community_id = c.id
         where i.id = #{id}
    </select>
    <select id="selectByCommunityId" resultType="com.qiaomu.modules.infopublish.entity.InvitationEntity">
        SELECT * FROM yw_invitation WHERE community_id=#{communityId}
    </select>

</mapper>