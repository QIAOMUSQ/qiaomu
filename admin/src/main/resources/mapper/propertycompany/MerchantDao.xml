<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiaomu.modules.propertycompany.dao.MerchantDao">


    <select id="selectPageAll" resultType="com.qiaomu.modules.propertycompany.entity.Merchant">
         SELECT * FROM yw_merchant
         <where>
             1=1
             <if test="name !=null and name !=''">
                 and name =#{name}
             </if>
         </where>
    </select>
    <select id="selectAll" resultType="com.qiaomu.modules.propertycompany.entity.Merchant">
         SELECT * FROM yw_merchant
    </select>
</mapper>