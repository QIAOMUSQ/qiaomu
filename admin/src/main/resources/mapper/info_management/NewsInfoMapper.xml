<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.info_management.dao.NewsInfoDao">

    <!--<select id="queryDetpIdList" resultType="long">
        select dept_id from sys_dept where parent_id = #{value} and del_flag = 0
    </select>-->
    <resultMap id="newsResultMap" type="io.renren.modules.info_management.entity.NewsInfoEntity">
        <result column="id" property="id"/>
        <result column="info_type" property="infoType"/>
        <result column="img_url" property="imgUrl"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="time" property="time"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="applaud" property="applaud"/>
        <result column="oppose" property="oppose"/>
        <result column="user_id" property="userId"/>
        <result column="info_type_name" property="infoTypeName"/>
    </resultMap>
    <select id="queryNewsInfoOrderByTimeDesc" resultMap="newsResultMap">
        select * from yw_news_info t ORDER BY t.time desc
    </select>
</mapper>